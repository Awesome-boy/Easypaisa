<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/tb_payment"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/colorPrimary"
        app:layout_constraintStart_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="@dimen/back_width"
            android:layout_height="match_parent"
            android:paddingTop="@dimen/back_padding"
            android:paddingBottom="@dimen/back_padding"
            android:layout_marginEnd="@dimen/back_padding"
            android:src="@mipmap/left_arr" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Back"
            android:textColor="#000"
            android:textSize="18sp" />

    </androidx.appcompat.widget.Toolbar>

    <RelativeLayout
        android:id="@+id/rl_txt_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/rl_sp_1"
        android:layout_marginTop="5dp">

        <EditText
            android:id="@+id/tv_merchant"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/text_width"
            android:paddingStart="@dimen/padding_start"
            android:background="@null"
            android:textColor="@color/black"
            android:text="010704515311001" />

        <TextView
            style="@style/ShowText"
            android:layout_width="@dimen/text_width"
            android:layout_height="wrap_content"
            android:text="MerchantId:" />
    </RelativeLayout>
    <View
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:background="@color/darker_gray"
        />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/rl_sp_1"
        android:layout_marginTop="5dp">

        <EditText
            android:id="@+id/tv_order"
            android:background="@null"
            android:textColor="@color/black"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/text_width"
            android:paddingStart="@dimen/padding_start"
            android:text="" />

        <TextView
            style="@style/ShowText"
            android:layout_width="@dimen/text_width"
            android:layout_height="wrap_content"
            android:text="OrderNo:" />
    </RelativeLayout>
    <View
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:background="@color/darker_gray"
        />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/rl_sp_1"
        android:layout_marginTop="5dp">

        <EditText
            android:id="@+id/tv_amout"
            android:background="@null"
            android:textColor="@color/black"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/text_width"
            android:paddingStart="@dimen/padding_start"
            android:text="" />

        <TextView
            style="@style/ShowText"
            android:layout_width="@dimen/text_width"
            android:layout_height="wrap_content"
            android:text="Amout:" />
    </RelativeLayout>
    <View
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:background="@color/darker_gray"
        />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/rl_sp_1"
        android:layout_marginTop="5dp">

        <EditText
            android:id="@+id/tv_result"
            android:background="@null"
            android:textColor="@color/black"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/text_width"
            android:paddingStart="@dimen/padding_start"
            android:text="" />

        <TextView
            style="@style/ShowText"
            android:layout_width="@dimen/text_width"
            android:layout_height="wrap_content"
            android:text="PayResult:" />
    </RelativeLayout>
    <View
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:background="@color/darker_gray"
        />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/rl_sp_1"
        android:layout_marginTop="5dp">

        <EditText
            android:id="@+id/tv_errorcode"
            android:background="@null"
            android:textColor="@color/black"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/text_width"
            android:paddingStart="@dimen/padding_start"
            android:text="" />

        <TextView
            style="@style/ShowText"
            android:layout_width="@dimen/text_width"
            android:layout_height="wrap_content"
            android:text="ErrorCode:" />
    </RelativeLayout>

    <View
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:background="@color/darker_gray"
        />
</LinearLayout>