<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingStart="20dp"
    android:paddingEnd="20dp"
    tools:context=".MainActivity">


<!--    <Button-->
<!--        android:id="@+id/btn_request"-->
<!--        android:layout_width="wrap_content"-->
<!--        android:layout_height="wrap_content"-->
<!--        android:text="request" />-->

    <TextView
        style="@style/TitleText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Payment SDK" />

    <Button
        android:id="@+id/btn_payment"
        style="@style/ButtonStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Three D Secure Payment"
        android:layout_marginTop="10dp"/>
    <Button
        android:id="@+id/btn_authorization"
        style="@style/ButtonStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Authorization"
        android:layout_marginTop="10dp"/>
    <Button
        android:id="@+id/btn_generate_qr"
        style="@style/ButtonStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Generate QR"
        android:layout_marginTop="10dp"/>
    <Button
        android:id="@+id/btn_parse_qr"
        style="@style/ButtonStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Parse QR"
        android:layout_marginTop="10dp"/>
    <Button
        android:id="@+id/btn_inquiry"
        style="@style/ButtonStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Inquiry"
        android:layout_marginTop="10dp"/>

    <Button
        android:id="@+id/btn_refund"
        style="@style/ButtonStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Refund"
        android:layout_marginTop="10dp"/>
    <Button
        android:id="@+id/btn_void"
        style="@style/ButtonStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Void"
        android:layout_marginTop="10dp"/>

    <Button
        android:id="@+id/btn_cancellation"
        style="@style/ButtonStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Authorization confirmation / cancellation"
        android:layout_marginTop="10dp"/>


</LinearLayout>