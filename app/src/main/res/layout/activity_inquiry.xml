<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rl_inquiry"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_below="@id/rl_payment">
    
    <RelativeLayout
        android:id="@+id/rl_txt_inquiry_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_title_inquiry_1"
        android:layout_marginTop="5dp">

        <EditText
            android:id="@+id/et_txt_inquiry_1"
            style="@style/InputText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/text_width"
            android:background="@drawable/background_edittext"
            android:paddingStart="@dimen/padding_start"
            android:text="010704515311001" />

        <TextView
            style="@style/InputText"
            android:layout_width="@dimen/text_width"
            android:layout_height="wrap_content"
            android:gravity="end"
            android:text="Merchant No." />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_txt_inquiry_2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/rl_txt_inquiry_1"
        android:layout_marginTop="5dp">

        <EditText
            android:id="@+id/et_txt_inquiry_2"
            style="@style/InputText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/text_width"
            android:background="@drawable/background_edittext"
            android:paddingStart="@dimen/padding_start"
            android:text="" />

        <TextView
            style="@style/InputText"
            android:layout_width="@dimen/text_width"
            android:layout_height="wrap_content"
            android:gravity="end"
            android:text="Order No." />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_txt_inquiry_3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/rl_txt_inquiry_2"
        android:layout_marginTop="5dp">

        <EditText
            android:id="@+id/et_txt_inquiry_3"
            style="@style/InputText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/text_width"
            android:background="@drawable/background_edittext"
            android:paddingStart="@dimen/padding_start"
            android:text="20191020145536" />

        <TextView
            style="@style/InputText"
            android:layout_width="@dimen/text_width"
            android:layout_height="wrap_content"
            android:gravity="end"
            android:text="Datetime" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_txt_inquiry_4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/rl_txt_inquiry_3"
        android:layout_marginTop="5dp">

        <EditText
            android:id="@+id/et_txt_inquiry_4"
            style="@style/InputText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/text_width"
            android:background="@drawable/background_edittext"
            android:paddingStart="@dimen/padding_start"
            android:text="20191020145536" />

        <TextView
            style="@style/InputText"
            android:layout_width="@dimen/text_width"
            android:layout_height="wrap_content"
            android:gravity="end"
            android:text="Query Datetime" />
    </RelativeLayout>

    <TextView
        android:id="@+id/tv_title_inquiry_1"
        style="@style/InputText"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center"
        android:text="Inquiry test " />

    <RelativeLayout
        android:id="@+id/rl_sign_key"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/rl_txt_inquiry_4"
        android:layout_marginTop="20dp">

        <EditText
            android:id="@+id/et_sign_key"
            style="@style/InputText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/text_width"
            android:background="@drawable/background_edittext"
            android:paddingStart="@dimen/padding_start"
            android:text="ZloDcaGkb1zP9/L7LkgWDA==" />

        <TextView
            style="@style/InputText"
            android:layout_width="@dimen/text_width"
            android:layout_height="wrap_content"
            android:gravity="end"
            android:text="Signature key" />
    </RelativeLayout>

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/tb_payment"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/colorPrimary"
        app:layout_constraintStart_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Inquiry"
            android:textColor="#000"
            android:textSize="18sp" />

    </androidx.appcompat.widget.Toolbar>

    <Button
        android:id="@+id/btn_confirm"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/ButtonStyle"
        android:text="Submit Query"
        android:layout_below="@id/rl_sign_key"/>
</RelativeLayout>
