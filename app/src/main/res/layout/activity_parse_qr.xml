<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rl_parse_qr"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_below="@id/rl_payment">
    
    <RelativeLayout
        android:id="@+id/rl_txt_parse_qr_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_title_parse_qr_1"
        android:layout_marginTop="5dp">

        <EditText
            android:id="@+id/et_txt_parse_qr_1"
            style="@style/InputText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/text_width"
            android:background="@drawable/background_edittext"
            android:paddingStart="@dimen/padding_start"
            android:text="010704515311001" />

        <TextView
            style="@style/InputText"
            android:layout_width="@dimen/text_width"
            android:layout_height="wrap_content"
            android:gravity="end"
            android:text="Merchant No." />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_txt_parse_qr_2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/rl_txt_parse_qr_1"
        android:layout_marginTop="5dp">

        <EditText
            android:id="@+id/et_txt_parse_qr_2"
            style="@style/InputText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/text_width"
            android:background="@drawable/background_edittext"
            android:paddingStart="@dimen/padding_start"
            android:text="12345678" />

        <TextView
            style="@style/InputText"
            android:layout_width="@dimen/text_width"
            android:layout_height="wrap_content"
            android:gravity="end"
            android:text="Terminal No." />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_txt_parse_qr_3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/rl_txt_parse_qr_2"
        android:layout_marginTop="5dp">

        <EditText
            android:id="@+id/et_txt_parse_qr_3"
            style="@style/InputText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/text_width"
            android:background="@drawable/background_edittext"
            android:paddingStart="@dimen/padding_start"
            android:text="" />

        <TextView
            style="@style/InputText"
            android:layout_width="@dimen/text_width"
            android:layout_height="wrap_content"
            android:gravity="end"
            android:text="QR Code" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_txt_parse_qr_4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/rl_txt_parse_qr_3"
        android:layout_marginTop="5dp"
        android:visibility="gone">

        <EditText
            android:id="@+id/et_txt_parse_qr_4"
            style="@style/InputText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/text_width"
            android:background="@drawable/background_edittext"
            android:paddingStart="@dimen/padding_start"
            android:text="0.1" />

        <TextView
            style="@style/InputText"
            android:layout_width="@dimen/text_width"
            android:layout_height="wrap_content"
            android:gravity="end"
            android:text="void Amount" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_txt_parse_qr_5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/rl_txt_parse_qr_4"
        android:layout_marginTop="5dp">

        <EditText
            android:id="@+id/et_txt_parse_qr_5"
            style="@style/InputText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/text_width"
            android:background="@drawable/background_edittext"
            android:paddingStart="@dimen/padding_start"
            android:text="20191020152519" />

        <TextView
            style="@style/InputText"
            android:layout_width="@dimen/text_width"
            android:layout_height="wrap_content"
            android:gravity="end"
            android:text="Datetime" />
    </RelativeLayout>


    <TextView
        android:id="@+id/tv_title_parse_qr_1"
        style="@style/InputText"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center"
        android:text="Parse QR test " />

    <RelativeLayout
        android:id="@+id/rl_sign_key"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/rl_txt_parse_qr_5"
        android:layout_marginTop="20dp">

        <EditText
            android:id="@+id/et_sign_key"
            style="@style/InputText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/text_width"
            android:background="@drawable/background_edittext"
            android:paddingStart="@dimen/padding_start"
            android:text="ZloDcaGkb1zP9/L7LkgWDA==" />

        <TextView
            style="@style/InputText"
            android:layout_width="@dimen/text_width"
            android:layout_height="wrap_content"
            android:gravity="end"
            android:text="Signature key" />
    </RelativeLayout>

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/tb_payment"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/colorPrimary"
        app:layout_constraintStart_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="@dimen/back_width"
            android:layout_height="match_parent"
            android:paddingTop="@dimen/back_padding"
            android:paddingBottom="@dimen/back_padding"
            android:layout_marginEnd="@dimen/back_padding"
            android:src="@mipmap/left_arr" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Parse QR"
            android:textColor="#000"
            android:textSize="18sp" />

    </androidx.appcompat.widget.Toolbar>

    <Button
        android:id="@+id/btn_confirm"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/ButtonStyle"
        android:text="Submit"
        android:layout_below="@id/rl_sign_key"/>
</RelativeLayout>
